{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Release Notes",
  "type": "object",
  "properties": {
    "overview": {
      "type": "string",
      "description": "Optional high-level summary (one short sentence)."
    },
    "highlights": {
      "type": "array",
      "minItems": 1,
      "maxItems": 6,
      "items": {
        "type": "string",
        "maxLength": 160
      },
      "description": "Concise bullet points (<=160 chars) covering the most important changes."
    }
  },
  "required": [
    "highlights",
    "overview"
  ],
  "additionalProperties": false
}